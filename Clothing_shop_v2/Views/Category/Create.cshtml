@model Clothing_shop_v2.VModels.CategoryCreateVModel

@{
    ViewData["Title"] = "Thêm danh mục";
    Layout = "_LayoutAdmin";

}

<h2>Thêm danh mục</h2>
<div class="container">
<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="CategoryName"></label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
        <div class="form-group">
            <label asp-for="ParentCategoryId">Danh mục cha (nếu có)</label>
            <select asp-for="ParentCategoryId" class="form-control"
                    asp-items="ViewBag.ParentCategories">
                <option value="">-- Không chọn --</option>
            </select>
            <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IsActive">Trạng thái</label>
            <select asp-for="IsActive" class="form-control">
                <option value="true">Hiển thị</option>
                <option value="false">Ẩn</option>
            </select>
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label>Ảnh danh mục</label>
            <input type="file" name="ImageFile" class="form-control-file" onchange="previewImage(event)" />
        </div>
        <img id="imagePreview" class="img-fluid" src="#" alt="Ảnh xem trước" style="display:none; max-width: 300px; margin-top: 10px;" />

        <button type="submit" class="btn btn-success">Thêm mới</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
@section Scripts {
    <script>
        function previewImage(event) {
            var input = event.target;
            var reader = new FileReader();

            reader.onload = function () {
                var img = document.getElementById('imagePreview');
                img.src = reader.result;
                img.style.display = 'block';
            };

            if (input.files && input.files[0]) {
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
</div>